<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Megafauna</modName>
			</li>
	
			<!-- Deinotherium-->
			<li Class="PatchOperationAddModExtension">
				<xpath>*/ThingDef[defName="Deinotherium"]</xpath>
				<value>
				<li Class="CombatExtended.RacePropertiesExtensionCE">
					<bodyShape>Quadruped</bodyShape>
				</li>
				</value>
			</li>
						
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="Deinotherium"]/statBases</xpath>
				<value>
				<MeleeDodgeChance>0.09</MeleeDodgeChance>
				<MeleeCritChance>0.8</MeleeCritChance>
				<ArmorRating_Blunt>0.16</ArmorRating_Blunt>
				<ArmorRating_Sharp>0.32</ArmorRating_Sharp>
				<MeleeParryChance>0.51</MeleeParryChance>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName="Deinotherium"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>tusk</label>
							<capacities><li>Cut</li></capacities>
							<power>31</power>
							<cooldownTime>2.2</cooldownTime>
							<linkedBodyPartsGroup>TuskAttackTool</linkedBodyPartsGroup>
							<armorPenetration>0.3</armorPenetration>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>tusk</label>
							<capacities><li>Stab</li></capacities>
							<power>31</power>
							<cooldownTime>2.2</cooldownTime>
							<linkedBodyPartsGroup>TuskAttackTool</linkedBodyPartsGroup>
							<armorPenetration>0.35</armorPenetration>
						</li>
					</tools>
				</value>
			</li>
			
			<!-- Aurochs -->
			
			<li Class="PatchOperationAddModExtension">
				<xpath>*/ThingDef[defName="Aurochs"]</xpath>
				<value>
				<li Class="CombatExtended.RacePropertiesExtensionCE">
					<bodyShape>Quadruped</bodyShape>
				</li>
				</value>
			</li>
						
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="Aurochs"]/statBases</xpath>
				<value>
				<MeleeDodgeChance>0.15</MeleeDodgeChance>
				<MeleeCritChance>0.5</MeleeCritChance>
				<ArmorRating_Blunt>0.13</ArmorRating_Blunt>
				<ArmorRating_Sharp>0.15</ArmorRating_Sharp>
				<MeleeParryChance>0.51</MeleeParryChance>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName="Aurochs"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>left hoof</label>
							<capacities><li>Blunt</li></capacities>
							<power>24.8</power>
							<cooldownTime>1.55</cooldownTime>
							<linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
							<armorPenetration>0.252</armorPenetration>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>right hoof</label>
							<capacities><li>Blunt</li></capacities>
							<power>24.8</power>
							<cooldownTime>1.55</cooldownTime>
							<linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
							<armorPenetration>0.252</armorPenetration>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>horn</label>
							<capacities><li>Stab</li></capacities>
							<power>23</power>
							<cooldownTime>1.65</cooldownTime>
							<linkedBodyPartsGroup>HornAttackTool</linkedBodyPartsGroup>
							<armorPenetration>0.35</armorPenetration>
						</li>
					</tools>
				</value>
			</li>
			
			
		</operations>
	</Operation>
</Patch>













